[Unit]
Description=Globular media
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=globular
Group=globular
WorkingDirectory={{.StateDir}}/media
Environment=GLOBULAR_SERVICES_DIR={{.StateDir}}/services
ExecStart={{.Prefix}}/bin/media_server
Restart=on-failure
RestartSec=2
LimitNOFILE=524288

[Install]
WantedBy=multi-user.target
